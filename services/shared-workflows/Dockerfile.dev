FROM node:20-slim

WORKDIR /app

# Copy root workspace files
COPY package*.json ./
COPY tsconfig.json ./
COPY tsconfig.base.json ./

# Copy specific services and packages
COPY services/shared-workflows ./services/shared-workflows
COPY services/engine ./services/engine
COPY services/wallet ./services/wallet
COPY packages/shared ./packages/shared

# Install dependencies (using root package-lock.json if available)
RUN npm install

WORKDIR /app/services/shared-workflows

CMD ["npm", "run", "dev"]
